<h2 class="faqcat-title first-title">
    <i></i>
    <?php echo __('Search results for: ');?><?php echo $this->getTextSearch(); ?>
</h2>
<?php if ($this->getFaqsList()): ?>
    <ol class="items faqs-list">
        <?php foreach($this->getFaqsList() as $faq): ?>
            <li class="item" id="faq-id-<?php echo $faq['faq_id']; ?>">
                <a href="<?php echo $this->getFaqFullPath($faq['identifier']); ?>"><span class="faq-iconplus"></span><?php echo $faq['title']; ?></a>
                <div class="description" id="description">
                    <?php echo $this->getFaqShortDescription($faq['content'], $faq['identifier']); ?>
                </div>
            </li>
        <?php endforeach; ?>
    </ol>
<?php else: ?>
    <ol class="items faqs-list">
        <li class="item no-question">
            <a href="#"><?php echo __('No FAQ was found.'); ?></a>
