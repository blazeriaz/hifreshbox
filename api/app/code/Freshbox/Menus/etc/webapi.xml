<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/menus/:menuId" method="GET">
        <service class="Freshbox\Menus\Api\MenuRepositoryInterface" method="getById"/>
        <resources>
            <!-- <resource ref="anonymous" /> -->
            <resource ref="Freshbox_Menus::menu" />
        </resources>
    </route>

    <route url="/V1/menus/search" method="GET">
        <service class="Freshbox\Menus\Api\MenuRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
	
	<route url="/V1/menus/weeklist" method="POST">
        <service class="Freshbox\Menus\Api\MenuRepositoryInterface" method="getWeekList"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
        
    </route>
	
	<route url="/V1/menus/weeklist/change-order" method="POST">
        <service class="Freshbox\Menus\Api\MenuRepositoryInterface" method="changeorder"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
        
    </route>

    <route url="/V1/accountsettings/:id" method="GET">
        <service class="Freshbox\Menus\Api\MenuRepositoryInterface" method="getAccountDetails"/>
        <resources>
           <resource ref="anonymous" />
        </resources>
    </route>
	
	<route url="/V1/menus" method="POST">
        <service class="Freshbox\Menus\Api\MenuRepositoryInterface" method="customSave"/>
        <resources>
            <resource ref="Freshbox_Menus::menu_save" />
        </resources>
    </route>
	
	<route url="/V1/menu" method="POST">
        <service class="Freshbox\Menus\Api\MenuRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Freshbox_Menus::menu_save" />
        </resources>
    </route>
	
	<route url="/V1/menu/:menuId" method="PUT">
        <service class="Freshbox\Menus\Api\MenuRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Freshbox_Menus::menu_save"/>
        </resources>
    </route>
	

    <route url="/V1/menus/:menuId" method="DELETE">
        <service class="Freshbox\Menus\Api\MenuRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="Freshbox_Menus::menu_delete" />
        </resources>
    </route>
	
	<route url="/V1/recipedetail/:urlKey" method="GET">
        <service class="Freshbox\Menus\Api\MenuRepositoryInterface" method="viewrecipedetail"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>