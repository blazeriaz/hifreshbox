<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/wallet/:walletId" method="GET">
        <service class="Freshbox\Wallet\Api\WalletRepositoryInterface" method="getById"/>
        <resources>
           <resource ref="Freshbox_Wallet::wallet" />
        </resources>
    </route>

    <route url="/V1/wallet/search" method="GET">
        <service class="Freshbox\Wallet\Api\WalletRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="self" />
        </resources>
		<data>
            <parameter name="customer_id" force="true">%customer_id%</parameter>
        </data>
    </route>

	<route url="/V1/wallet" method="POST">
        <service class="Freshbox\Wallet\Api\WalletRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Freshbox_Wallet::wallet_save" />
        </resources>
    </route>
	
    <route url="/V1/wallet/redeem" method="POST">
        <service class="Freshbox\Wallet\Api\WalletRepositoryInterface" method="redeem"/>
        <resources>
            <resource ref="self" />
        </resources>
		<data>
            <parameter name="customer_id" force="true">%customer_id%</parameter>
        </data>
    </route>
	
	
	<route url="/V1/customer-wallet" method="POST">
        <service class="Freshbox\Wallet\Api\WalletRepositoryInterface" method="save"/>
       <resources>
            <resource ref="self" />
        </resources>
		<data>
            <parameter name="customer_id" force="true">%customer_id%</parameter>
        </data>
    </route>
	
	<route url="/V1/customer-transcation" method="POST">
        <service class="Freshbox\Wallet\Api\TranscationRepositoryInterface" method="save"/>
       <resources>
            <resource ref="self" />
        </resources>
		<data>
            <parameter name="customer_id" force="true">%customer_id%</parameter>
        </data>
    </route>
	
	<route url="/V1/wallet-record" method="POST">
        <service class="Freshbox\Wallet\Api\RecordRepositoryInterface" method="save"/>
       <resources>
            <resource ref="self" />
        </resources>
		<data>
            <parameter name="customer_id" force="true">%customer_id%</parameter>
        </data>
    </route>
	
	<route url="/V1/wallet/:walletId" method="PUT">
        <service class="Freshbox\Wallet\Api\WalletRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Freshbox_Wallet::wallet_save"/>
        </resources>
    </route>

    <route url="/V1/wallet/:walletId" method="DELETE">
        <service class="Freshbox\Wallet\Api\WalletRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="Freshbox_Wallet::wallet_delete" />
        </resources>
    </route>
</routes>